{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "esnext",
      "es6",
      "dom",
      "dom.iterable",
    ],
    "allowJs": true,
    //"allowSyntheticDefaultImports": true,
    "declaration": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "importsNotUsedAsValues": "error",
    "moduleResolution": "node",
    /* noEmit - We only use TypeScript for type checking not compiling. */
    "noEmit": true,
    //"noImplicitAny": false
    "resolveJsonModule": true,
    "removeComments": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}